[Unit]
Description=Agent Panel
After=network.target

[Service]
Type=simple
User=YOUR_USER
WorkingDirectory=/home/YOUR_USER/web-console-hub/agent-panel
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=5
Environment=PORT=3001
Environment=NODE_ENV=production
Environment=DATA_BASE=/home/YOUR_USER/ObsidianVault/Inbox/YOUR_ASSISTANT/.sophie
Environment=DAEMON_DIR=/home/YOUR_USER/agent-daemon

[Install]
WantedBy=multi-user.target
